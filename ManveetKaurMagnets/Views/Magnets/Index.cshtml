@model ManveetKaurMagnets.Models.MagnetsColourViewModel

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-color: powderblue;
    }

    h1 {
        color: blue;
    }

    table {
        border: 11px double black;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Magnets" asp-action="Index" method="get">
    <p>
        <select asp-for="MagnetsColour" asp-items="Model.Colour">
            <option value="">All</option>
        </select>

        Shape: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Magnets[0].Shape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Magnets[0].Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Magnets[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Magnets[0].Power)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Magnets[0].CustomerReview)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Magnets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Shape)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Power)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerReview)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
